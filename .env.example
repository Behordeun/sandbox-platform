# Global Environment Configuration for Sandbox Platform

# Database Configuration
POSTGRES_DB=sandbox
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_INITDB_ARGS=--encoding=UTF-8
DATABASE_URL=postgresql://postgres:postgres123@postgres:5432/sandbox

# Redis Configuration
REDIS_PASSWORD=redis123
REDIS_URL=redis://:redis123@redis:6379/0

# JWT Configuration (CHANGE IN PRODUCTION!)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Service URLs
AUTH_SERVICE_URL=http://auth-service:8000
CONFIG_SERVICE_URL=http://config-service:8000

# Feature Flags
DEBUG=true
RATE_LIMIT_ENABLED=false
METRICS_ENABLED=true
REQUEST_LOGGING_ENABLED=true
RESPONSE_LOGGING_ENABLED=true

# External APIs
DOJA_API_KEY=your-doja-api-key-here

# Config Service
CONFIG_STORAGE_TYPE=redis
ENCRYPTION_KEY=dev-encryption-key-change-in-production
VERSIONING_ENABLED=true

# Monitoring
GF_SECURITY_ADMIN_PASSWORD=admin123
