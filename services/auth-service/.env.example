# Auth Service Environment Configuration

# Database Settings (REQUIRED)
DATABASE_URL=postgresql://sandbox_user:sandbox_password@localhost:5432/sandbox_auth

# JWT Settings (REQUIRED)
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth2 Settings
OAUTH2_ISSUER_URL=http://localhost:8000
OAUTH2_JWKS_URI=http://localhost:8000/.well-known/jwks.json

# NIN/BVN Integration (OPTIONAL)
DOJAH_API_KEY=your-dojah-api-key
DOJAH_BASE_URL=https://api.dojah.io

# Server Settings
HOST=0.0.0.0
PORT=8000
DEBUG=false

# CORS Settings
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]