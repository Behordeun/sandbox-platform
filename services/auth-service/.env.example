# Application settings
APP_NAME="Sandbox Auth Service"
APP_VERSION="1.0.0"
DEBUG=false

# Database settings
DATABASE_URL="postgresql://sandbox_user:changeme@localhost:5432/sandbox_auth"

# JWT settings
JWT_SECRET_KEY="your-secret-key-change-in-production"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth2 settings
OAUTH2_ISSUER_URL="http://localhost:8000"
OAUTH2_JWKS_URI="http://localhost:8000/.well-known/jwks.json"

# NIN/BVN Integration settings
DOJA_API_KEY="your-doja-api-key"
DOJA_BASE_URL="https://api.dojah.io"

# CORS settings
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Server settings
HOST="0.0.0.0"
PORT=8000

