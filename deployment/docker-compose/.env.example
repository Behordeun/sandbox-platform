# Sandbox Platform (Docker Compose dev) - Example Env

# Non-secret app env
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=true

# Postgres (required)
POSTGRES_DB=sandbox_platform
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-me
POSTGRES_INITDB_ARGS="--encoding=UTF-8 --lc-collate=C --lc-ctype=C"

# Redis (optional password; enable by setting)
REDIS_PASSWORD=change-me

# In-network connection URLs (used by services)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# Auth/JWT
JWT_SECRET_KEY=change-me

# Monitoring (Grafana)
GF_SECURITY_ADMIN_PASSWORD=change-me
GRAFANA_RO_USER=readonly
GRAFANA_RO_PASSWORD=change-me

# Optional networking
# CONTAINER_SUBNET=172.20.0.0/16
