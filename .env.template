# Sandbox Platform - Centralized Environment Configuration
# This is the single source of truth for all environment variables

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL - Single database for all services
DATABASE_URL=
DB_PASSWORD=

# PostgreSQL Docker variables
POSTGRES_DB=sandbox_platform
POSTGRES_USER=postgres
POSTGRES_PASSWORD=
POSTGRES_INITDB_ARGS="--encoding=UTF-8 --lc-collate=C --lc-ctype=C"

# Redis - Caching and sessions
REDIS_URL=redis://127.0.0.1:6379/0
REDIS_PASSWORD=redis123

# MongoDB - Document storage (if needed)
MONGO_URL=mongodb://sandbox_user:sandbox_password@127.0.0.1:27017/sandbox_platform

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
# JWT Configuration
JWT_SECRET_KEY=
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Configuration Encryption
CONFIG_ENCRYPTION_KEY=
ENCRYPTION_KEY=
CONFIG_STORAGE_TYPE=redis
VERSIONING_ENABLED=true

# =============================================================================
# EXTERNAL API PROVIDERS
# =============================================================================
# Dojah API (NIN/BVN Verification)
DOJAH_API_KEY=your-dojah-api-key
DOJAH_APP_ID=your-dojah-app-id
DOJAH_BASE_URL=https://api.dojah.io

# SMS Provider (Termii)
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=DPISandbox
SMS_BASE_URL=https://api.ng.termii.com

# AI Provider (OpenAI)
AI_API_KEY=your-ai-api-key
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=2000

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@dpi-sandbox.ng
SMTP_FROM_NAME="DPI Sandbox Platform"

# =============================================================================
# SERVICE URLS (Internal Communication)
# =============================================================================
# Platform Services
AUTH_SERVICE_URL=http://127.0.0.1:8000
API_GATEWAY_URL=http://127.0.0.1:8080
CONFIG_SERVICE_URL=http://127.0.0.1:8001

# Sandbox Services
AI_SERVICE_URL=http://127.0.0.1:8002
SMS_SERVICE_URL=http://127.0.0.1:8003
IVR_SERVICE_URL=http://127.0.0.1:8004
NIN_SERVICE_URL=http://127.0.0.1:8005
BVN_SERVICE_URL=http://127.0.0.1:8006
TWO_WAY_SMS_SERVICE_URL=http://127.0.0.1:8007

# =============================================================================
# RATE LIMITING & PERFORMANCE
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Connection Pooling
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
PROMETHEUS_URL=http://127.0.0.1:9090
GRAFANA_URL=http://127.0.0.1:3001
GRAFANA_USERNAME=admin
GRAFANA_PASSWORD=admin123
GRAFANA_RO_USER=grafana_ro
GRAFANA_RO_PASSWORD=grafana_ro_password
GF_SECURITY_ADMIN_PASSWORD=admin123

# Metrics
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30
RATE_LIMIT_ENABLED=true

# =============================================================================
# CORS & SECURITY SETTINGS
# =============================================================================
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET","POST","PUT","DELETE","OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# =============================================================================
# NIGERIAN CONTEXT SETTINGS
# =============================================================================
DEFAULT_CURRENCY=NGN
DEFAULT_LOCATION=Nigeria
DEFAULT_TIMEZONE=Africa/Lagos
DEFAULT_LANGUAGE=en_NG

# Identity Verification
NIN_LENGTH=11
BVN_LENGTH=11

# Compliance
NDPR_ENABLED=true
CBN_KYC_ENABLED=true
NCC_GUIDELINES=true


# =============================================================================
# DOCKER & CONTAINER SETTINGS
# =============================================================================
# Python settings for containers
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1
PYTHONPATH=/app

# Container networking
CONTAINER_NETWORK=sandbox-network
CONTAINER_SUBNET=172.20.0.0/16

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================
# Service hosts (for Docker networking)
AUTH_SERVICE_HOST=auth-service
API_GATEWAY_HOST=api-gateway
CONFIG_SERVICE_HOST=config-service
NIN_SERVICE_HOST=nin-service
BVN_SERVICE_HOST=bvn-service
SMS_SERVICE_HOST=sms-service
AI_SERVICE_HOST=ai-service

# Service ports
AUTH_SERVICE_PORT=8000
API_GATEWAY_PORT=8080
CONFIG_SERVICE_PORT=8001
AI_SERVICE_PORT=8002
SMS_SERVICE_PORT=8003
IVR_SERVICE_PORT=8004
NIN_SERVICE_PORT=8005
BVN_SERVICE_PORT=8006
TWO_WAY_SMS_SERVICE_PORT=8007

# =============================================================================
# ADMIN ACCOUNT DETAILS
# =============================================================================
ADMIN_PASSWORD=
MUHAMMAD_PASSWORD=

