# DPI Sandbox Development Environment
ENVIRONMENT=development

# API Gateway
API_GATEWAY_URL=http://localhost:8080

# Core DPI Services
NIN_SERVICE_URL=http://localhost:8005
BVN_SERVICE_URL=http://localhost:8006
SMS_SERVICE_URL=http://localhost:8003
AI_SERVICE_URL=http://localhost:8002

# Authentication
AUTH_SERVICE_URL=http://localhost:8000
JWT_SECRET_KEY=dev-secret-key-change-in-production

# Database (SQLite for easy development)
DATABASE_URL=sqlite:///./dpi_sandbox.db

# External APIs (Sandbox/Mock mode)
DOJA_API_KEY=sandbox-key
DOJA_BASE_URL=https://sandbox.dojah.io
SMS_PROVIDER=mock

# Rate Limiting (Relaxed for development)
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL=INFO
DEBUG=true